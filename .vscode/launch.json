  "version": "0.2.0",
  "configurations": [
    {
      "name": "Test all solutions",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "${workspaceRoot}/node_modules/.bin/jest",
      "runtimeArgs": [
        "${fileBasenameNoExtension}",
        "--runInBand",
        "--coverage=false",
        "--no-cache"
      ],
      "cwd": "${workspaceRoot}",
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "sourceMaps": true
    },
    {
      "name": "Test a current solution",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "${workspaceRoot}/node_modules/.bin/jest",
      "runtimeArgs": [
        "${relativeFileDirname}",
        "--runInBand",
        "--coverage=false",
        "--no-cache"
      ],
      "cwd": "${workspaceRoot}",
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "sourceMaps": true
    }
  ]
}
